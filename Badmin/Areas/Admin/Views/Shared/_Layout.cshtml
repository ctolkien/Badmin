          <div class="row-fluid">
              @RenderBody()
          </div><!--/row-->
        </div><!--/span-->
      </div><!--/row-->

      <hr>

      <footer>
        <p>&copy; Company 2012</p>
      </footer>

    </div><!--/.fluid-container-->





    @Scripts.Render("~/bundles/jquery")

    <script src="~/Scripts/bootstrap.min.js"></script>

    @RenderSection("scripts", required: false)
    @MiniProfiler.RenderIncludes()
</body>
</html>
